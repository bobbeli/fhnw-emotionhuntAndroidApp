<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/experience_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.AppBarOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/img_experience_example"
        android:id="@+id/img_experience_preview"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:paddingTop="64dp"
        android:background="#aa000000">

            <TextView
                android:text="@string/please_do_yur_dishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_experience_detail_comment"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#aaffffff"
        >

        <TextView
            android:text="@string/reactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_experience_detail_reaction"
            android:textStyle="normal|bold"
            android:textSize="18sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/activity_experience_detail_reaction_item"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"></include>

        </HorizontalScrollView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>